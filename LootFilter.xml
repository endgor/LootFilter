<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<!-- Event handler frame -->
	<Frame name="LootFilterFrame" enableMouse="false" parent="UIParent">
		<Scripts>
			<OnLoad> LootFilter.OnLoad(); </OnLoad>
			<OnEvent> LootFilter.OnEvent(); </OnEvent>
		</Scripts>
	</Frame>

	<!-- Hidden tooltip for scanning item info -->
	<GameTooltip name="LootFilterScanningTooltip" inherits="GameTooltipTemplate">
		<Scripts>
			<Onload>
				self:SetOwner(UIParent, "ANCHOR_NONE");
			</Onload>
		</Scripts>
	</GameTooltip>

	<!-- Main options window (shell only - content built by ui.lua) -->
	<Frame name="LootFilterOptions" toplevel="true" movable="true" parent="UIParent"
		enableMouse="true" hidden="true">
		<Scripts>
			<OnLoad> LootFilter.buildUI(); </OnLoad>
		</Scripts>
		<TitleRegion setAllPoints="true"/>
		<Size>
			<AbsDimension x="720" y="510"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
			edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
				<Size>
					<AbsDimension x="128" y="17"/>
				</Size>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="LootFilterFrameTitle"
					file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="276" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="LootFilterFrameTitleText"
					inherits="GameFontNormal" text="Loot Filter">
					<Anchors>
						<Anchor point="TOP" relativeTo="LootFilterOptions">
							<Offset>
								<AbsDimension x="0" y="-3"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

</Ui>
